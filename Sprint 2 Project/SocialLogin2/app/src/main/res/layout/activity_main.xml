<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sreelalc.sociallogin.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/fb_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/button_register"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@color/fb_blue_light"
            android:onClick="registerClicked"
            android:shadowRadius="3"
            android:text="Create New Account"
            android:textColor="@android:color/white"
            android:layout_below="@+id/button_login"
            android:layout_alignEnd="@+id/button_login"
            android:layout_marginEnd="55dp"
            android:layout_marginTop="25dp" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/password"
            android:layout_below="@+id/password"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:onClick="loginClicked"
            android:text="Log in"
            android:textColor="@android:color/white"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/email1"
            android:layout_below="@+id/email1"
            android:layout_marginTop="3dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <EditText
            android:id="@+id/email1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="79dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:hint="Email address or Phone Number"
            android:inputType="textEmailAddress"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textColor="@color/fb_blue_light"
            android:layout_alignTop="@+id/button_register"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="English"
        android:textColor="@color/fb_blue_dark"
        android:layout_marginStart="26dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="13dp"
        android:text="தமிழ்"
        android:textColor="@color/fb_blue_dark" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="11dp"
        android:text="हिन्दी"
        android:textColor="@color/fb_blue_dark" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" मराठी"
        android:textColor="@color/fb_blue_dark"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="54dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignTop="@+id/textView7"
        android:text="ગુજરાતી"
        android:textColor="@color/fb_blue_dark" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/textView10"
        android:text="മലയാളം"
        android:textColor="@color/fb_blue_dark" />

    <TextView
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/error_red"
        android:padding="5dp"
        android:text="The password or username you entered is incorrect"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="gone"/>


</RelativeLayout>
